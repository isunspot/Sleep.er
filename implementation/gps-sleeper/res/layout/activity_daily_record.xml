<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TimePicker
        android:id="@+id/tpSleepDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:timePickerMode="spinner" />

    <RatingBar
        android:id="@+id/rbExhaustionDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:indeterminate="false"
        android:isIndicator="false"
        android:numStars="@integer/NumStars"
        android:rating="2.0"
        android:stepSize="1.0" />

    <TimePicker
        android:id="@+id/tpWakeHourDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:timePickerMode="spinner" />

    <RatingBar
        android:id="@+id/rbQualitySleepDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:indeterminate="false"
        android:isIndicator="false"
        android:numStars="@integer/NumStars"
        android:rating="2.0"
        android:stepSize="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <Button
            android:id="@+id/btSaveDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/strSave" 
            android:onClick="saveDailyRecord"/>

        <Button
            android:id="@+id/btCancelDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/strCancel" 
            android:onClick="cancelDailyRecord"/>

    </LinearLayout>

</LinearLayout>