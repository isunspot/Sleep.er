<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bdc3c7"
            android:orientation="vertical" >

        <ImageView
            android:id="@+id/icProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="35dp"
            android:contentDescription="@string/icProfile"
            android:src="@drawable/userbig" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:alpha=".70"
            android:gravity="center_horizontal"
            android:text="@string/strDayView"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </LinearLayout>
    
    <ListView
        android:id="@+id/DayViewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
        <LinearLayout
        android:id="@+id/LayoutInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.40"
        android:background="#27ae60"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/strInsert"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>
